<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/login-register.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>

        <div id="content" class="wrapper">
            <form>
                <h1>Login</h1>
                <div class="input-box">
                    <input type="text" placeholder="Username" id="login-username" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input type="password" placeholder="Password" id="login-password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>


                <div class="remember-forgot">
                    <label for=""><input type="checkbox">Remember me</label>
                    <a href="#">Forgot password?</a>
                </div>



                <button class="btn" onclick="loginUser()">Sign in</button>

                <div class="register-link">
                    <p>Don't have an account? <a href="/register">Register</a></p>
                </div>
            </form>
            
            <!-- <div id="login-response" class="response"></div> -->
        </div>

    <script>
        async function loginUser() {
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;
            
            // const responseElement = document.getElementById('login-response');
            // responseElement.textContent = "Enviando solicitud...";
            
            try {
                const response = await fetch('http://localhost:3000/db/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        username,
                        password
                    })
                });
                
                const data = await response.json();
                console.log(data);

                if (response.ok) {
                    alert("Login");
                    window.location.href = '/';
                    // responseElement.innerHTML = `<strong>Login exitoso:</strong>\n${JSON.stringify(data, null, 2)}`;
                    // responseElement.style.color = 'green';
                    
                    // Guardar datos de usuario (simplificado)
                    // if (data.user) {
                    //     localStorage.setItem('currentUser', JSON.stringify(data.user));
                    // }    
                    
                } else {
                    alert("No login")
                    // responseElement.innerHTML = `<strong>Error:</strong>\n${JSON.stringify(data, null, 2)}`;
                    // responseElement.style.color = 'red';
                }
                
            } catch (error) {
                console.err(error.message);
                // responseElement.textContent = `Error: ${error.message}`;
                // responseElement.style.color = 'red';
            }
        }
    </script>
</body>
</html>