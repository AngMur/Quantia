<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Inversionista</title>
    <style>
* {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            color: #fff;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 40px;
            max-width: 600px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #00ff88, #00d4ff, #4a90e2, #ff4757);
            border-radius: 20px 20px 0 0;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin: 20px 0;
            overflow: hidden;
        }

        .progress {
            height: 100%;
            background: linear-gradient(90deg, #00d4ff, #4a90e2);
            border-radius: 10px;
            transition: width 0.5s ease;
        }

        .question-container {
            margin: 30px 0;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .question-number {
            color: #00d4ff;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .question-text {
            font-size: 24px;
            color: #fff;
            margin-bottom: 30px;
            line-height: 1.4;
        }

        .options {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .option {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: left;
            position: relative;
            overflow: hidden;
            color: #fff;
        }

        .option::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .option:hover {
            border-color: #00d4ff;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
            background: rgba(255, 255, 255, 0.1);
        }

        .option:hover::before {
            left: 100%;
        }

        .option.selected {
            border-color: #00d4ff;
            background: linear-gradient(135deg, #00d4ff, #4a90e2);
            color: white;
            transform: scale(1.02);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.4);
        }

        .option-text {
            font-size: 16px;
            font-weight: 500;
            position: relative;
            z-index: 1;
        }

        .buttons {
            margin-top: 40px;
            display: flex;
            gap: 20px;
            justify-content: center;
        }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: linear-gradient(45deg, #00d4ff, #4a90e2);
            color: white;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: rgba(255, 255, 255, 0.8);
        }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
        }

        .btn-secondary:hover:not(:disabled) {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(0, 212, 255, 0.5);
        }

        .result-container {
            display: none;
            text-align: center;
            animation: fadeInUp 0.6s ease forwards;
        }

        .result-icon {
            font-size: 80px;
            margin: 20px 0;
        }

        .result-title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 15px;
            background: linear-gradient(45deg, #00d4ff, #4a90e2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .result-description {
            font-size: 18px;
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .risk-low {
            color: #00ff88;
        }

        .risk-medium {
            color: #ffb347;
        }

        .risk-high {
            color: #ff4757;
        }

        .score-display {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin: 20px 0;
            font-size: 18px;
            font-weight: 600;
            color: #fff;
        }

        /* Elementos flotantes decorativos */
        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(45deg, rgba(0, 212, 255, 0.1), rgba(74, 144, 226, 0.1));
            animation: float 20s infinite linear;
        }

        @keyframes float {
            0% { transform: translateY(100vh) rotate(0deg); }
            100% { transform: translateY(-100px) rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="color: #ffffff; margin-bottom: 10px; font-size: 28px;">Evaluaci√≥n de Perfil de Inversionista</h1>
        <p style="color: #b7b7b7; margin-bottom: 20px;">Descubre tu tolerancia al riesgo financiero</p>
        
        <div class="progress-bar">
            <div class="progress" id="progressBar"></div>
        </div>

        <div id="quizContainer">
            <div class="question-container" id="questionContainer">
                <div class="question-number" id="questionNumber">Pregunta 1 de 8</div>
                <div class="question-text" id="questionText"></div>
                <div class="options" id="optionsContainer"></div>
            </div>
            
            <div class="buttons">
                <button class="btn btn-secondary" id="prevBtn" onclick="previousQuestion()" style="display: none;">Anterior</button>
                <button class="btn btn-primary" id="nextBtn" onclick="nextQuestion()" disabled>Siguiente</button>
            </div>
        </div>

        <div class="result-container" id="resultContainer">
            <div class="result-icon" id="resultIcon"></div>
            <div class="result-title" id="resultTitle"></div>
            <div class="score-display" id="scoreDisplay"></div>
            <div class="result-description" id="resultDescription"></div>
            <button class="btn btn-primary" onclick="restartQuiz()">Realizar Test Nuevamente</button>
            <a class="btn btn-primary" href="/">Continuar</a>
        </div>
    </div>

    <script>
        const questions = [
            {
                text: "¬øCu√°l es tu principal objetivo al invertir?",
                options: [
                    { text: "Preservar mi capital sin p√©rdidas", score: 1 },
                    { text: "Generar ingresos estables con poco crecimiento", score: 2 },
                    { text: "Equilibrar crecimiento y estabilidad", score: 3 },
                    { text: "Maximizar el crecimiento a largo plazo", score: 4 }
                ]
            },
            {
                text: "Si tu inversi√≥n pierde 20% de su valor en un mes, ¬øqu√© har√≠as?",
                options: [
                    { text: "Vender inmediatamente para evitar m√°s p√©rdidas", score: 1 },
                    { text: "Mantener y esperar a que se recupere", score: 2 },
                    { text: "Mantener e invertir un poco m√°s", score: 3 },
                    { text: "Invertir significativamente m√°s aprovechando el precio bajo", score: 4 }
                ]
            },
            {
                text: "¬øCu√°nto tiempo planeas mantener tus inversiones?",
                options: [
                    { text: "Menos de 2 a√±os", score: 1 },
                    { text: "2 a 5 a√±os", score: 2 },
                    { text: "5 a 10 a√±os", score: 3 },
                    { text: "M√°s de 10 a√±os", score: 4 }
                ]
            },
            {
                text: "¬øCu√°l es tu experiencia con inversiones?",
                options: [
                    { text: "Ninguna, soy principiante", score: 1 },
                    { text: "Limitada, algunas inversiones b√°sicas", score: 2 },
                    { text: "Moderada, diversas inversiones", score: 3 },
                    { text: "Extensa, inversionista experimentado", score: 4 }
                ]
            },
            {
                text: "¬øQu√© porcentaje de tus ingresos puedes destinar a inversiones?",
                options: [
                    { text: "Menos del 5%", score: 1 },
                    { text: "5% - 15%", score: 2 },
                    { text: "15% - 25%", score: 3 },
                    { text: "M√°s del 25%", score: 4 }
                ]
            },
            {
                text: "¬øC√≥mo reaccionar√≠as si tus inversiones tuvieran alta volatilidad?",
                options: [
                    { text: "Me estresar√≠a mucho y no podr√≠a dormir", score: 1 },
                    { text: "Me preocupar√≠a pero mantendr√≠a la calma", score: 2 },
                    { text: "Lo ver√≠a como algo normal del mercado", score: 3 },
                    { text: "Lo disfrutar√≠a como una oportunidad", score: 4 }
                ]
            },
            {
                text: "¬øCu√°l es tu situaci√≥n financiera actual?",
                options: [
                    { text: "Ajustada, necesito liquidez inmediata", score: 1 },
                    { text: "Estable, pero con pocos ahorros", score: 2 },
                    { text: "C√≥moda, con buenos ahorros de emergencia", score: 3 },
                    { text: "Muy s√≥lida, con m√∫ltiples fuentes de ingresos", score: 4 }
                ]
            },
            {
                text: "¬øQu√© tipo de rendimiento esperas anualmente?",
                options: [
                    { text: "2-4% (similar a dep√≥sitos bancarios)", score: 1 },
                    { text: "4-8% (moderado pero estable)", score: 2 },
                    { text: "8-15% (good balance riesgo-rendimiento)", score: 3 },
                    { text: "M√°s del 15% (alto rendimiento)", score: 4 }
                ]
            }
        ];

        let currentQuestion = 0;
        let answers = [];
        let totalScore = 0;
        const userId = <%- JSON.stringify(userId) %>;

        function displayQuestion() {
            const question = questions[currentQuestion];
            const questionContainer = document.getElementById('questionContainer');
            
            // Reset animation
            questionContainer.style.opacity = '0';
            questionContainer.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                document.getElementById('questionNumber').textContent = `Pregunta ${currentQuestion + 1} de ${questions.length}`;
                document.getElementById('questionText').textContent = question.text;
                
                const optionsContainer = document.getElementById('optionsContainer');
                optionsContainer.innerHTML = '';
                
                question.options.forEach((option, index) => {
                    const optionDiv = document.createElement('div');
                    optionDiv.className = 'option';
                    optionDiv.onclick = () => selectOption(index, option.score);
                    optionDiv.innerHTML = `<div class="option-text">${option.text}</div>`;
                    optionDiv.setAttribute('data-index', index);
                    optionsContainer.appendChild(optionDiv);
                });
                
                // Re-trigger animation
                questionContainer.style.opacity = '1';
                questionContainer.style.transform = 'translateY(0)';
                
                updateProgress();
                updateButtons();
            }, 150);
        }

        function selectOption(optionIndex, score) {
            // Remove previous selection
            document.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            
            // Add selection to clicked option
            document.querySelector(`[data-index="${optionIndex}"]`).classList.add('selected');
            
            answers[currentQuestion] = score;
            document.getElementById('nextBtn').disabled = false;
        }

        function updateProgress() {
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function updateButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.style.display = currentQuestion > 0 ? 'block' : 'none';
            nextBtn.textContent = currentQuestion === questions.length - 1 ? 'Ver Resultado' : 'Siguiente';
            nextBtn.disabled = answers[currentQuestion] === undefined;
        }

        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                displayQuestion();
            } else {
                showResult();
            }
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                displayQuestion();
            }
        }

        function showResult() {
            totalScore = answers.reduce((sum, score) => sum + score, 0);
            const maxScore = questions.length * 4;
            const percentage = (totalScore / maxScore) * 100;


            
            let riskProfile, icon, description, className;
            
            if (percentage <= 40) {
                changeRiskLevel("L", userId);
                riskProfile = "Tolerancia al Riesgo: BAJA";
                icon = "üõ°Ô∏è";
                className = "risk-low";
                description = "Eres un inversionista conservador. Prefieres inversiones seguras y estables como bonos gubernamentales, dep√≥sitos bancarios y fondos de bajo riesgo. Tu prioridad es preservar el capital m√°s que generar altos rendimientos.";
            } else if (percentage <= 70) {
                changeRiskLevel("M", userId);
                riskProfile = "Tolerancia al Riesgo: MEDIA";
                icon = "‚öñÔ∏è";
                className = "risk-medium";
                description = "Eres un inversionista moderado. Buscas un equilibrio entre seguridad y crecimiento. Te interesan fondos mixtos, algunas acciones de empresas estables y diversificaci√≥n en diferentes tipos de activos.";
            } else {
                changeRiskLevel("H", userId);
                riskProfile = "Tolerancia al Riesgo: ALTA";
                icon = "üöÄ";
                className = "risk-high";
                description = "Eres un inversionista agresivo. Est√°s dispuesto a asumir riesgos significativos por la posibilidad de obtener rendimientos elevados. Te interesan acciones de crecimiento, mercados emergentes y inversiones especulativas.";
            }
            
            document.getElementById('quizContainer').style.display = 'none';
            document.getElementById('resultContainer').style.display = 'block';
            document.getElementById('resultIcon').textContent = icon;
            document.getElementById('resultTitle').textContent = riskProfile;
            document.getElementById('resultTitle').className = `result-title ${className}`;
            document.getElementById('scoreDisplay').innerHTML = `Puntuaci√≥n: ${totalScore}/${maxScore} puntos (${Math.round(percentage)}%)`;
            document.getElementById('resultDescription').textContent = description;
        }

        function restartQuiz() {
            currentQuestion = 0;
            answers = [];
            totalScore = 0;
            document.getElementById('quizContainer').style.display = 'block';
            document.getElementById('resultContainer').style.display = 'none';
            document.getElementById('progressBar').style.width = '0%';
            displayQuestion();
        }

        async function changeRiskLevel(risk, userId) {

            try {
                const response = await fetch('/db/change-risk', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ risk, userId})
                });

                // Verifica si la respuesta es JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                const text = await response.text();
                throw new Error(`Respuesta inesperada: ${text.substring(0, 100)}...`);
                }

                const data = await response.json();
                
                if (!response.ok) {
                throw new Error(data.error || 'Error desconocido');
                }
                
                console.log(`Risk ${risk} assigned to ${userId}`)
            } catch (error) {
                console.error('Error en registro:', error);
            }
        }

        // Initialize the quiz
        displayQuestion();
    </script>
</body>
</html>