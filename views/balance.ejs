    <script>
        // Variables globales
        let currentUser = null;
        let currentBalance = 0;
        let transactions = [];

        // Inicializaci√≥n al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', async () => {
            // Simular usuario logueado (en una app real esto vendr√≠a de la sesi√≥n)
            currentUser = { id: 1, username: 'juan_perez', name: 'Juan P√©rez' };
            document.getElementById('userAvatar').textContent = currentUser.name.substring(0, 2);
            document.getElementById('usernameDisplay').textContent = currentUser.name;
            
            // Cargar datos del usuario
            await loadUserData();
            
            // Configurar event listeners
            setupEventListeners();
        });

        async function loadUserData() {
    try {
        // Cargar datos del usuario
        const [userResponse, transactionsResponse] = await Promise.all([
            fetch(`http://localhost:3000/db/user/${currentUser.id}`),
            fetch(`http://localhost:3000/db/transactions/${currentUser.id}?limit=10`)
        ]);

        if (!userResponse.ok || !transactionsResponse.ok) {
            throw new Error(userResponse.ok ? 'Error al cargar transacciones' : 'Error al cargar datos del usuario');
        }

        const userData = await userResponse.json();
        const transactionsData = await transactionsResponse.json();


        currentBalance = parseFloat(userData.data?.balance) || 0;
        transactions = transactionsData.data || [];

        // Actualizar UI
        document.getElementById('balanceAmount').textContent = `$${currentBalance.toFixed(2)}`;
        document.getElementById('balanceStatus').textContent = currentBalance > 0 ? 'Listo para invertir' : 'Sin fondos disponibles';
        renderTransactions();

    } catch (error) {
        console.error('Error:', error);
        document.getElementById('balanceStatus').textContent = 'Error al cargar datos';
        document.getElementById('transactionList').innerHTML = `
            <p style="color: #ff4757; text-align: center;">
                Error al cargar transacciones: ${error.message}
            </p>
        `;
    }
}


function formatMySQLDate(mysqlDate) {
    if (!mysqlDate) return 'Fecha no disponible';
    
    // Reemplazar espacio por 'T' y agregar 'Z' para zona horaria UTC
    const isoDate = mysqlDate.replace(' ', 'T') + 'Z';
    const date = new Date(isoDate);
    
    if (isNaN(date.getTime())) {
        console.error('Fecha inv√°lida:', mysqlDate);
        return 'Fecha inv√°lida';
    }
    
    // Opciones de formato para espa√±ol
    const options = {
        day: '2-digit',
        month: 'short',
        year: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        timeZone: 'UTC' // Opcional: mantener en UTC o usar Intl para conversi√≥n autom√°tica
    };
    
    return date.toLocaleString('es-ES', options);
}


        // Renderizar transacciones
        function renderTransactions() {
            const container = document.getElementById('transactionList');
            container.innerHTML = '';
            
            if (transactions.length === 0) {
                container.innerHTML = '<p style="color: rgba(255,255,255,0.5); text-align: center;">No hay transacciones recientes</p>';
                return;
            }
            
            transactions.slice(0, 10).forEach(transaction => {
                const transactionItem = document.createElement('div');
                transactionItem.className = 'transaction-item';
                
                const isDeposit = transaction.type === 'deposit';
                const date = formatMySQLDate(transaction.date)
                
                transactionItem.innerHTML = `
                    <div class="transaction-info">
                        <div class="transaction-type-icon ${isDeposit ? 'deposit-icon' : 'withdraw-icon'}">
                            ${isDeposit ? '‚ÜóÔ∏è' : '‚ÜôÔ∏è'}
                        </div>
                        <div class="transaction-details">
                            <h4>${isDeposit ? 'Dep√≥sito' : 'Retiro'} - ${getMethodName(transaction.description)}</h4>
                            <p>${transaction.description}</p>
                        </div>
                    </div>
                    <div class="transaction-amount">
                        <div class="amount ${isDeposit ? 'positive' : 'negative'}">
                            ${isDeposit ? '+' : '-'}$${transaction.amount.toFixed(2)}
                        </div>
                        <div class="status status-${transaction.status}">
                            ${getStatusName(transaction.status)}
                        </div>
                    </div>
                `;
                
                container.appendChild(transactionItem);
            });
        }

        // Configurar event listeners
        function setupEventListeners() {
            // Formulario de dep√≥sito
            document.getElementById('depositForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const amount = parseFloat(document.getElementById('depositAmount').value);
                const method = document.getElementById('depositMethod').value;
                
                if (!amount || !method) {
                    alert('Por favor completa todos los campos');
                    return;
                }
                
                if (amount < 1) {
                    alert('El monto m√≠nimo es $1.00');
                    return;
                }
                
                try {
                    // Deshabilitar bot√≥n durante el procesamiento
                    const depositBtn = document.getElementById('depositBtn');
                    depositBtn.disabled = true;
                    depositBtn.textContent = 'Procesando...';
                    
                    // Enviar solicitud al endpoint
                    const response = await fetch('http://localhost:3000/db/deposit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            userId: currentUser.id,
                            amount: amount,
                            description: `Dep√≥sito via ${method}`
                        })
                    });
                    
                    if (!response.ok) throw new Error('Error en el dep√≥sito');
                    
                    const result = await response.json();
                    
                    // Actualizar UI
                    await loadUserData();
                    alert(`Dep√≥sito de $${amount.toFixed(2)} realizado con √©xito`);
                    
                    // Resetear formulario
                    document.getElementById('depositForm').reset();
                    
                } catch (error) {
                    console.error('Error:', error);
                    alert(`Error al procesar dep√≥sito: ${error.message}`);
                } finally {
                    const depositBtn = document.getElementById('depositBtn');
                    depositBtn.disabled = false;
                    depositBtn.textContent = 'Depositar Fondos';
                }
            });
            
            // Formulario de retiro
            document.getElementById('withdrawForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const amount = parseFloat(document.getElementById('withdrawAmount').value);
                const method = document.getElementById('withdrawMethod').value;
                
                if (!amount || !method) {
                    alert('Por favor completa todos los campos');
                    return;
                }
                
                if (amount < 1) {
                    alert('El monto m√≠nimo es $1.00');
                    return;
                }
                
                if (amount > currentBalance) {
                    alert(`No tienes suficientes fondos disponibles. M√°ximo: $${currentBalance.toFixed(2)}`);
                    return;
                }
                
                try {
                    // Deshabilitar bot√≥n durante el procesamiento
                    const withdrawBtn = document.getElementById('withdrawBtn');
                    withdrawBtn.disabled = true;
                    withdrawBtn.textContent = 'Procesando...';
                    
                    // Enviar solicitud al endpoint
                    const response = await fetch('http://localhost:3000/db/withdrawal', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            userId: currentUser.id,
                            amount: amount,
                            description: `Retiro via ${method}`
                        })
                    });
                    
                    if (!response.ok) throw new Error('Error en el retiro');
                    
                    const result = await response.json();
                    
                    // Actualizar UI
                    await loadUserData();
                    alert(`Retiro de $${amount.toFixed(2)} realizado con √©xito`);
                    
                    // Resetear formulario
                    document.getElementById('withdrawForm').reset();
                    
                } catch (error) {
                    console.error('Error:', error);
                    alert(`Error al procesar retiro: ${error.message}`);
                } finally {
                    const withdrawBtn = document.getElementById('withdrawBtn');
                    withdrawBtn.disabled = false;
                    withdrawBtn.textContent = 'Retirar Fondos';
                }
            });
            
            // Validaci√≥n en tiempo real para retiros
            document.getElementById('withdrawAmount').addEventListener('input', function(e) {
                const currentAmount = parseFloat(e.target.value) || 0;
                const submitBtn = document.getElementById('withdrawBtn');
                
                if (currentAmount > currentBalance) {
                    e.target.style.borderColor = '#ff4757';
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Fondos insuficientes';
                } else {
                    e.target.style.borderColor = 'rgba(255, 255, 255, 0.15)';
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Retirar Fondos';
                }
            });
        }

        // Helper functions
        function setAmount(type, amount) {
            const input = document.getElementById(type + 'Amount');
            input.value = amount;
            input.focus();
        }

        function setMaxWithdraw() {
            const input = document.getElementById('withdrawAmount');
            input.value = currentBalance.toFixed(2);
            input.focus();
        }

        function getMethodName(description) {
            if (description.includes('bank')) return 'Transferencia bancaria';
            if (description.includes('card')) return 'Tarjeta de d√©bito';
            if (description.includes('crypto')) return 'Criptomoneda';
            if (description.includes('paypal')) return 'PayPal';
